<form method="post" action="{{ path('departure_delete', {'id': departure.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ departure.id) }}">
    <button class="btn admin-delete-btn"><i class="material-icons">delete</i></button>
</form>
