{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <form id="form_schedule" class="col s12">
                <h3 class="bck-night white-text center pad border-radius">Ajouter une disponibilité</h3>
                <div class="row pl pr mb">
                    <i class="material-icons schedule-calendar pt col s1">date_range</i>
                    <input name='datePicker' type="text" class="datepicker pl pr schedule-date col s10 offset-s1 l11">
                </div>
                <div class="row pl pr mt mb">
                    <div class="col s6">
                        <label>
                            <input name="morning" type="checkbox" value="Matin">
                            <span>Matin</span>
                        </label>
                    </div>
                    <div class="col s6">
                        <label>
                            <input name="afternoon" type="checkbox" value="Après-midi">
                            <span>Après-midi</span>
                        </label>
                    </div>
                </div>
            </form>
        </div>
        <div>
            <button class="btn waves-effect waves-light ml mt mb" id="button_schedule" type="button" name="action"><i class="material-icons">add</i></button>
        </div>
        <div class="row pl pr">
            <h5 class="mt">Mes disponibilités :</h5>
            <table id="calendar-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th class="center-align">Matin</th>
                        <th class="center-align">Après-midi</th>
                    </tr>
                </thead>
                <tbody>
                {% for calendar in calendars %}
                    <tr>
                        <td>{{ calendar.date|date("m/d/Y") }}</td>
                        <td class="center-align">
                            {% if calendar.isMorning == true %}
                                <i class="material-icons schedule-true">brightness_1</i>
                            {% else %}
                                <i class="material-icons schedule-false">brightness_1</i>
                            {% endif %}
                        </td>
                        <td class="center-align">
                            {% if calendar.isAfternoon == true %}
                                <i class="material-icons schedule-true">brightness_1</i>
                            {% else %}
                                <i class="material-icons schedule-false">brightness_1</i>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
