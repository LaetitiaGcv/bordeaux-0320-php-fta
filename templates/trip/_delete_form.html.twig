<form method="post" action="{{ path('trip_delete', {'id': trip.id}) }}" onsubmit="return confirm('{% trans %}Are you sure you want to delete this accompanying?{% endtrans %}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trip.id) }}">
    <button class="btn waves-effect waves-light">
        <i class="material-icons">delete</i>
    </button>
</form>
