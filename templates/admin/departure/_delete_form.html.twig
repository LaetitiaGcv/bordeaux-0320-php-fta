<form method="post" action="{{ path('departure_delete', {'id': departure.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce point de départ ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ departure.id) }}">
    <button class="btn admin-delete-btn"><i class="material-icons">delete</i></button>
</form>
