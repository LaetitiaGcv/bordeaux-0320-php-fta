{% extends 'admin/base.html.twig' %}

{% block title %}Accompagnements{% endblock %}

{% block body %}
    <div class="container-wide">
        <div class="row pt-s">
            <div class="center-align z-depth-2 border-radius mb-l pad-0">
                <h4 class="bck-night-gr border-radius-top admin-title-card pt-l pb-l">
                    Accompagnements
                </h4>
                <table class="striped centered" id="trips-table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>DÉPART</th>
                        <th>ARRIVÉE</th>
                        <th>DATE</th>
                        <th>HEURE</th>
                        <th>BÉNÉFICIAIRE</th>
                        <th>ACCOMPAGNANT</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for trip in trips %}
                        {% include 'admin/_components/_tableTrips.html.twig' %}
                    {% endfor %}
                    </tbody>
                </table>
                <div class="row">
                    <div class="col s6 mb-s mt-s">
                        <a id="previous" class="waves-effect waves-light btn-floating paginator display-button" data-limit="0" data-paginator="previous">
                            <i class="material-icons">chevron_left</i>
                        </a>
                    </div>
                    <div class="col s6 mb-s mt-s">
                        <a id="next" class="waves-effect waves-light btn-floating paginator" data-limit="5" data-paginator="next">
                            <i class="material-icons">chevron_right</i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('paginatorTrips') }}
{% endblock %}
