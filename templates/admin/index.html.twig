{% extends 'admin/base.html.twig' %}

{% block title %}Administration - Accueil{% endblock %}

{% block body %}
    <div class="container-wide">
        <div class="row admin-margin">
            <div class="col s5 center-align z-depth-2 border-radius mb-l mt-l pad-0">
                <h4 class="bck-night-gr border-radius-top admin-title-card pt-l pb-l">Accompagnants</h4>
                <table class="striped">
                    <thead>
                        <tr>
                            <th class="center-align">#</th>
                            <th class="center-align">PRÉNOM</th>
                            <th class="center-align">NOM</th>
                            <th class="center-align">CRÉÉ LE</th>
                            <th class="center-align">ACTIF</th>
                            <th class="center-align">ACTION</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in usersVolunteer %}
                                {% include 'admin/_components/_tableUsers.html.twig' %}
                        {% endfor %}
                    </tbody>
                </table>
                <a href="{{ path('admin_common', {'status': 'volunteer'}) }}">
                    <button class="waves-effect waves-light btn mb-l mt-l">En voir plus</button>
                </a>
            </div>
            <div class="col s5 offset-s1 center-align z-depth-2 border-radius mb-l mt-l pad-0">
                <h4 class="bck-night-gr border-radius-top admin-title-card pt-l pb-l">Bénéficiaires</h4>
                <table class="striped">
                    <thead>
                    <tr>
                        <th class="center-align">#</th>
                        <th class="center-align">PRÉNOM</th>
                        <th class="center-align">NOM</th>
                        <th class="center-align">CRÉÉ LE</th>
                        <th class="center-align">ACTIF</th>
                        <th class="center-align">ACTION</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in usersBeneficiary %}
                            {% include 'admin/_components/_tableUsers.html.twig' %}
                    {% endfor %}
                    </tbody>
                </table>
                <a href="{{ path('admin_common', {'status': 'beneficiary'}) }}">
                    <button class="waves-effect waves-light btn mb-l mt-l">En voir plus</button>
                </a>
            </div>
        </div>
        <div class="row mt-l admin-margin">
            <div class="col s11 center-align z-depth-2 border-radius mb-l pad-0">
                <h4 class="bck-night-gr border-radius-top admin-title-card pt-l pb-l">Accompagnement</h4>
                <table class="striped">
                    <thead>
                    <tr>
                        <th class="center-align">#</th>
                        <th class="center-align">DÉPART</th>
                        <th class="center-align">ARRIVÉE</th>
                        <th class="center-align">DATE</th>
                        <th class="center-align">BÉNÉFICIAIRE</th>
                        <th class="center-align">ACCOMPAGNANT</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for trip in trips %}
                            {% include 'admin/_components/_tableTrips.html.twig' %}
                    {% endfor %}
                    </tbody>
                </table>
                <button class="waves-effect waves-light btn mb-l mt-l">En voir plus</button>
            </div>
        </div>
    </div>
{% endblock %}
