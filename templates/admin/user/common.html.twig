{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col s6">
                <h4>{{ status == 'volunteer' ? 'Bénévoles' : 'Bénéficiaires' }}</h4>
                <table class="striped">
                    <thead>
                    <tr>
                        <th class="center-align">#</th>
                        <th class="center-align">Prénom</th>
                        <th class="center-align">Nom</th>
                        <th class="center-align">Créé le</th>
                        <th class="center-align">Actif</th>
                        <th class="center-align">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        {% include 'admin/_components/_tableUsers.html.twig' %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col s6">
                <h4>Ajouter un {{ status == 'volunteer' ? 'bénévole' : 'bénéficiaire' }}</h4>
                {{ include('user/_form_register.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
