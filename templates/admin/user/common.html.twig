{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="container-wide">
        <div class="row admin-margin">
            <div class="col s5 center-align users-list z-depth-2 border-radius mb-l mt-l pad-0">
                <h4 class="bck-night-gr border-radius-top admin-title-card pt-l pb-l">{{ status == 'volunteer' ? 'Accompagnants' : 'Bénéficiaires' }}</h4>
                <table class="striped">
                    <thead>
                    <tr>
                        <th class="center-align">#</th>
                        <th class="center-align">PRÉNOM</th>
                        <th class="center-align">NOM</th>
                        <th class="center-align">DISPOS</th>
                        <th class="center-align">ACTIF</th>
                        <th class="center-align">ACTION</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        {% include 'admin/_components/_tableUsers.html.twig' %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col s5 offset-s1 center-align z-depth-2 border-radius mb-l mt-l">
                <h4 class="bck-night-gr border-radius-top admin-title-card pt-l pb-l">Ajouter un {{ status == 'volunteer' ? 'accompagnant' : 'bénéficiaire' }}</h4>
                {{ include('admin/_components/_form_register.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
